<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Suspend Coroutine"
              android:id="@+id/suspend_coroutine_button"
              />
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Return Single Value"
              android:id="@+id/single_coroutine_button"
              />
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Async Coroutine"
              android:id="@+id/async_coroutine_button"
              />
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Job Coroutine"
              android:id="@+id/job_coroutine_button"
              />
          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Parent Child Coroutine"
              android:id="@+id/parent_child_coroutine_button"
              />


</LinearLayout>